! http://www.in-ulm.de/~mascheck/X11/xmodmap.html
! https://wiki.archlinux.org/index.php/Xmodmap
! keycode, keysym-order
! 1. Key
! 2. Shift+Key
! 3. mode_switch+Key
! 4. mode_switch+Shift+Key
! 5. AltGr+Key
! 6. AltGr+Shift+Key

clear Lock
clear control
clear mod1
clear mod2
clear mod3
clear mod4
clear mod5

keycode 37 = Super_L
keycode 133 = Control_L
keycode 105 = Super_R
keycode 134 = Control_R

keycode 66 = Escape

! default, rebind as osx
! keycode  16 = 7 slash 7 slash braceleft division
! keycode  17 = 8 parenleft 8 parenleft bracketleft guillemotleft
! keycode  18 = 9 parenright 9 parenright bracketright guillemotright
! keycode  19 = 0 equal 0 equal braceright degree
! keycode  64 = Alt_L ISO_Prev_Group Alt_L ISO_Prev_Group Alt_L ISO_Prev_Group
keycode  16 = 7 slash backslash bar guillemotleft division
keycode  17 = 8 parenleft bracketleft braceleft bracketleft braceleft
keycode  18 = 9 parenright bracketright braceright bracketright braceright
keycode  19 = 0 equal 0 equal guillemotright degree
! https://bugzilla.redhat.com/show_bug.cgi?id=537708
!keycode  64 = Mode_switch ISO_Prev_Group ISO_Prev_Group Mode_switch ISO_Prev_Group
!add mod2 = Alt_R Alt_L Mode_switch
keycode  64 = Alt_L ISO_Prev_Group Alt_L ISO_Prev_Group Alt_L ISO_Prev_Group

add control = Control_L Control_R
add mod1 = Meta_L
!add mod2 = Mode_switch
add mod3 = Alt_L
add mod4 = Super_L Super_R
add mod5 = ISO_Level3_Shift

