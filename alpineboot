# pipe this to ash
# Note that this is cached by github for a short while

function main {
  add_repos
  install_packages
  add_user "$1" "$2"
  get_dotfiles "$1"
}

function add_user {
  useradd -m -p "$2" "$1"
  echo "permit nopass root as $1" >> /etc/doas.conf
  echo "permit nopass $1 as root" >> /etc/doas.conf
}

function install_packages {
  # https://pkgs.alpinelinux.org/contents?branch=v3.15&arch=x86_64
  apk add kbd terminus-font openssh mosh git shadow doas
}

function add_repos {
  version="v3.16"
  add_repo "https://ftp.acc.umu.se/mirror/alpinelinux.org/$version/main"
  add_repo "https://ftp.acc.umu.se/mirror/alpinelinux.org/$version/community"
  add_repo "https://mirror.operationtulip.com/alpine/$version/main"
  add_repo "https://mirror.operationtulip.com/alpine/$version/community"
}

function add_repo {
  local file=/etc/apk/repositories
  grep -q -F "$1" $file || echo "$1" >> $file
}

function get_dotfiles {
  if [ ! -e "/home/$1/code/dotfiles" ]; then
    doas -u "$1" mkdir -p "/home/$1/code"
    doas -u "$1" git clone https://github.com/flugsio/dotfiles "/home/$1/code/dotfiles" -b alpinewip
  fi
  doas -u "$1" ash -c "cd /home/$1/code/dotfiles; git pull; ./install_ash"
}

main flugsio "$1"
