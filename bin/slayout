#!/bin/bash

# screen layout

if [ "$1" = "0" ]; then
  xrandr --auto
elif [ "$1" = "1" ]; then
  xrandr \
    --output LVDS-0 --mode 1440x900 \
    --output VGA-0 --off
elif [ "$1" = "2" ]; then
  xrandr \
    --output LVDS-0 --off \
    --output VGA-0 --mode 1680x1050
elif [ "$1" = "3" ]; then
  xrandr \
    --output LVDS-0 --mode 1440x900 --pos 0x250 \
    --output VGA-0 --mode 1680x1050 --right-of LVDS-0
elif [ "$1" = "4" ]; then
  xrandr \
    --output LVDS-0 --mode 1440x900 \
    --output VGA-0 --mode 1440x900 --same-as LVDS-0
else
  echo "usage:"
  echo "  $0 0 : auto"
  echo "  $0 1 : LVDS"
  echo "  $0 2 : VGA"
  echo "  $0 3 : LVDS+VGA"
  echo "  $0 4 : LVDS,VGA mirror"
fi
