#!/bin/sh

#command="select id, handler from delayed_jobs where handler ilike '%recalculate_user_progresses%' order by updated_at desc limit 1;"

command=$(sed -n '/^;--palb$/,/^;$/p' ~/code/promote/site/postgre.sql | tail -n+2)
#command="$1"

echo Running on all backups SQL: "$command"
for db in $(psql -l | grep "^ promote" | grep -oP "promote-[^-]*-20160811"); do
  echo $db
  psql $db -c "$command" | cat
done
