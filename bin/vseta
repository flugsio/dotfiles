#!/bin/sh

function main {
  size=${1:-32}
  if [ "$size" = "w" ]; then
    echo 14 16 18 20 22* 24 28* 32
  else
    # showconsolefont to view all characters
    setfont /usr/share/consolefonts/ter-1${size}b.psf.gz
  fi

  # this differ a bit compared to sv-code
  loadkeys -s ~/code/dotfiles/slash/se-code.map
}

main $@
