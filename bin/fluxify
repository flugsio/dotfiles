#!/bin/bash

# adding 15 to longitude = 1 hour earlier
#curl ipinfo.io | jq '.loc / "," | "-l " + .[0] + " -g " + (.[1] | tonumber + 15 | tostring)' -r | xargs xflux

pkill redshift
sleep 5
curl ipinfo.io | jq '.loc / "," | "-l " + .[0] + ":" + (.[1] | tonumber + 15 | tostring)' -r | xargs redshift -b 1.0:0.8
